<div class="page-header">  <h1>Listing Events </h1></div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= link_to 'Show', country, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

