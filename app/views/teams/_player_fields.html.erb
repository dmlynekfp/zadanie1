<%= content_tag :div, class: "nested-fields"  do%>
    <%= f.inputs do %>

        <%=  f.input  :name, validate:true%>
        <%=  f.input  :email_adress%>

            <%=  f.semantic_fields_for :characters do |character| %>
                <%= render 'character_fields', f:character %>
            <% end%>
        <%= content_tag :div do %>
            <%= link_to_add_association 'add character', f, :characters %>
            <%= link_to_remove_association "remove player", f%>
        <% end %>
    <% end %>
<% end %>