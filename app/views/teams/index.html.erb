<div class="page-header">  <h1>Listing teams</h1></div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team, class: 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_team_path(team),class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', team, method: :delete,class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class: 'btn btn-success btn-sm'  %>
