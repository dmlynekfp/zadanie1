<div class="page-header">  <h1>Listing Events </h1></div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= link_to 'Show', event, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class:'btn btn-default' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: 'btn btn-link' %>
